<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterAddressActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        tools:context="activity_sign_in"
        style="@style/SpacedContainer"
        >

        <TextView
            style="@style/TextTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cadastro de endereço" />

        <EditText
            style="@style/Input"
            android:id="@+id/input_address_cep"
            android:hint="CEP"
            android:inputType="text"
            android:autofillHints="text" />

        <EditText
            style="@style/Input"
            android:id="@+id/input_address_number"
            android:hint="Número"
            android:inputType="text"
            android:autofillHints="text" />

        <EditText
            style="@style/Input"
            android:id="@+id/input_address_complement"
            android:hint="Complemento"
            android:inputType="text"
            android:autofillHints="text" />

        <Button
            android:id="@+id/button_user_finish_register"
            style="@style/Button"
            android:text="Finalizar Cadastro" />
    </LinearLayout>
</ScrollView>